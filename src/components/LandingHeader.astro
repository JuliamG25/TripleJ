---
import { Button } from '../islands/Button';
---

<header class="sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto flex h-16 items-center justify-between px-4">
    <a href="/" class="flex items-center gap-2">
      <img
        src="/images/fesc-logo.png"
        alt="FESC - Fundación de Estudios Superiores Comfanorte"
        width="120"
        height="50"
        class="h-10 w-auto"
      />
    </a>
    
    <nav class="hidden md:flex items-center gap-6">
      <a href="#caracteristicas" class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors">
        Características
      </a>
      <a href="#programas" class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors">
        Programas
      </a>
      <a href="#contacto" class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors">
        Contacto
      </a>
    </nav>

    <div class="flex items-center gap-3">
      <Button variant="outline" client:load href="/login" className="hidden sm:inline-flex bg-transparent">
        Iniciar Sesión
      </Button>
      <Button client:load href="/login" className="bg-primary hover:bg-fesc-hover text-primary-foreground">
        Acceder al Sistema
      </Button>
    </div>
  </div>
</header>
