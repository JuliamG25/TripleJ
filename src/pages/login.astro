---
import Layout from '../layouts/Layout.astro';
import { LoginForm } from '../islands/LoginForm';
---

<Layout>
  <div class="min-h-screen flex">
    <!-- Left Panel - Form -->
    <div class="flex-1 flex flex-col justify-center px-4 py-12 sm:px-6 lg:px-8 bg-background">
      <div class="mx-auto w-full max-w-md">
        <div class="mb-8 text-center">
          <a href="/">
            <img
              src="/images/fesc-logo.png"
              alt="FESC - Fundación de Estudios Superiores Comfanorte"
              width="180"
              height="75"
              class="mx-auto mb-6"
            />
          </a>
          <h1 class="text-2xl font-bold text-foreground">
            Sistema de Gestión de Proyectos
          </h1>
          <p class="mt-2 text-muted-foreground">
            Ingresa tus credenciales para acceder al sistema
          </p>
        </div>

        <LoginForm client:load />

        <p class="mt-8 text-center text-sm text-muted-foreground">
          <a href="/" class="text-primary hover:text-fesc-hover transition-colors">
            Volver al inicio
          </a>
        </p>
      </div>
    </div>

    <!-- Right Panel - Image -->
    <div class="hidden lg:block lg:flex-1 relative">
      <img
        src="/images/fesc-background.png"
        alt="FESC Campus"
        class="object-cover w-full h-full"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-background via-background/50 to-transparent" />
      <div class="absolute bottom-8 left-8 right-8">
        <div class="bg-background/90 backdrop-blur-sm rounded-lg p-6 border border-border">
          <blockquote class="text-lg font-medium text-foreground mb-2">
            "Tu Futuro sí es posible"
          </blockquote>
          <p class="text-sm text-muted-foreground">
            FESC - Educación Superior | Técnica Profesional - Tecnología - Profesional Universitario - Especialista
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
